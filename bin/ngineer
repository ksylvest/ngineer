#!/usr/bin/env ruby

require 'rubygems'
require 'commander/import'

require 'ngineer'
require 'ngineer/version'

program :version, Ngineer::VERSION
program :description, 'configuration and management of rack applications'

command :list do |c|
  c.syntax = 'ngineer list [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--verbose', 'Verbose listing'
  c.action do |args, options|
    Ngineer::Commands.new(STDOUT).list(args, options)
  end
end

command :link do |c|
  c.syntax = 'ngineer setup [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    Ngineer::Comands.new(STDOUT).link(args, options)
  end
end

